<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>gov.va.api.health</groupId>
    <artifactId>health-apis-parent</artifactId>
    <version>3.0.11</version>
    <relativePath/>
  </parent>
  <artifactId>ee-artifacts</artifactId>
  <version>2.0.1-SNAPSHOT</version>
  <packaging>jar</packaging>
  <properties>
    <checkstyle.skip>true</checkstyle.skip>
    <lombok.version>1.18.6</lombok.version>
    <jaxws-rt.version>2.3.2</jaxws-rt.version>
    <jaxws-maven-plugin.version>2.6.2</jaxws-maven-plugin.version>
    <lombok-xjc-plugin.version>1.0.0</lombok-xjc-plugin.version>
  </properties>
  <dependencies>
    <dependency>
      <groupId>org.projectlombok</groupId>
      <artifactId>lombok</artifactId>
      <version>${lombok.version}</version>
      <scope>provided</scope>
    </dependency>
    <!-- jaxws-rt runtime dependency added as it is no longer longer provided int he JDK as of Java 11 -->
    <dependency>
      <groupId>com.sun.xml.ws</groupId>
      <artifactId>jaxws-rt</artifactId>
      <version>${jaxws-rt.version}</version>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <!-- com.helger.maven is a branch of org.codehaus.mojo jaws-maven-plugin that works with Java 12 -->
        <!-- https://mvnrepository.com/artifact/com.helger.maven/jaxws-maven-plugin/2.6.2 -->
        <groupId>com.helger.maven</groupId>
        <artifactId>jaxws-maven-plugin</artifactId>
        <version>${jaxws-maven-plugin.version}</version>
        <executions>
          <execution>
            <goals>
              <goal>wsimport</goal>
            </goals>
            <configuration>
              <wsdlDirectory>src/main/wsdl</wsdlDirectory>
              <wsdlFiles>
                <wsdlFile>eeSummary.wsdl</wsdlFile>
              </wsdlFiles>
              <keep>true</keep>
              <sourceDestDir>src/main/java</sourceDestDir>
              <args>
                <arg>-B-Xlombok</arg>
              </args>
              <vmArgs>
                <vmArg>-Djavax.xml.accessExternalSchema=all</vmArg>
              </vmArgs>
            </configuration>
          </execution>
        </executions>
        <dependencies>
          <dependency>
            <groupId>gov.va.xjc</groupId>
            <artifactId>lombok-xjc-plugin</artifactId>
            <version>${lombok-xjc-plugin.version}</version>
          </dependency>
        </dependencies>
      </plugin>
    </plugins>
  </build>
</project>
